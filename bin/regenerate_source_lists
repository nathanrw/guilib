#!/bin/bash
#
# Regenerate lists of source files. Run when files are added or removed.
#
# n.b. run on Windows via Git Bash.

find src/demo -iname "*.cpp" > demo-sources.txt
find src/nui -iname "*.cpp" > sources.txt
find src/tests -iname "*.cpp" > tests.txt
find include -iname "*.hpp" -o -iname "*.h" > headers.txt
